<Window x:Class="Kvalitetinator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kvalitetinator"
        mc:Ignorable="d"
        Title="Kvalitetinator" Height="450" Width="800">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="639,150,0,0"/>
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="639,190,0,0"/>
        <ListView HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="518" Margin="10,10,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="OrderId" Width="150" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Customer" Width="150" DisplayMemberBinding="{Binding Customer}"/>
                    <GridViewColumn Header="Delivery" Width="150" DisplayMemberBinding="{Binding Delivery}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <RadioButton Name="ActiveOrder" Content="Activate" HorizontalAlignment="Right" VerticalAlignment="Top"/>

    </Grid>
</Window>
