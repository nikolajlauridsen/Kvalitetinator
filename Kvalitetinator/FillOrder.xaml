<Window x:Class="Kvalitetinator.FillOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kvalitetinator"
        mc:Ignorable="d"
        Title="Fill Order" Height="450" Width="800">
    <DockPanel>
        <WrapPanel>
            <ListView Width="250" Height="350" Margin="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Product" Width="250" DisplayMemberBinding="{Binding Name}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Margin="10">
                <Label Content="Order lines"></Label>
            </StackPanel>
        </WrapPanel>
    </DockPanel>
</Window>
